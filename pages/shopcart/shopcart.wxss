.van-submit-bar van-button{
  width: 184px
}

.shopcart {
  height: calc(100vh - 50px);
}

.van-checkbox .van-checkbox__label {
  flex: 1;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  height: 60%;
  width: 90%;
  position: fixed;
  bottom: 20%;
  left: 5%;
  z-index: 2000;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-tittle {
  font-size: 16px;
  font-weight: bold;
  margin: 12px 0px;
}

.table, .table div {
  margin: 0 auto;
}

.table {
  display: table;
  font-size: 12px;
  width: 90%;
  padding: 0px 5%;
  border-collapse: collapse;
  box-sizing: border-box;
}

.table-tr {
  display: table-row;
  height: 92rpx;
}

.table-th {
  display: table-cell;
  font-weight: bold;
  border: 1rpx solid gray;
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;
  border: 1rpx solid gray;
  text-align: center;
  vertical-align: middle;
}

.total-price {
  color: red;
  position: absolute;
  bottom: 12px;
}