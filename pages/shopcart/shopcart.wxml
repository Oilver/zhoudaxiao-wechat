<view class="shopcart-page">
  <view class="shopcart">
    <van-checkbox-group wx:if="{{shopCart.length}}" value="{{selectItem}}" bind:change="onCheckBoxChange">
      <van-checkbox wx:for="{{shopCart}}" wx:key="item" name="{{index}}">
        <van-card
          num="{{item.num}}"
          price="{{item.originalPrice}}"
          desc="描述信息"
          title="{{item.name}}"
          thumb="{{item.avatarUrl}}"
        >
        </van-card>
      </van-checkbox>
    </van-checkbox-group>
    <view wx:else>还什么都没有呢，请选择您要购买的物品！</view>
  </view>
  <view class="submit">
    <van-submit-bar
      price="{{ totalValue }}"
      button-text="提交订单"
      bind:submit="onClickButton"
      style="width: 184px"
    >
    <van-tag type="primary">
      <van-checkbox value="{{ checkAll }}" bind:change="onSelectAllChange">全选</van-checkbox>
    </van-tag>
  </van-submit-bar>
  </view>

  <view class="commodity_screen" bindtap="hideList" wx:if="{{showList}}"></view>
  <!--弹出框  -->
  <view class="commodity_attr_box" wx:if="{{showList}}">
    <view class="list-tittle"> 购物清单 </view>
    <view class="table">
      <view class="table-tr">
        <view class="table-th">产品名称</view>
        <view class="table-th">产品ID</view>
        <view class="table-th">产品价格</view>
        <view class="table-th">产品数量</view>
        <view class="table-th">产品总价</view>
      </view>
      <view wx:for="{{selectItem}}" wx:key="item" class="table-tr">
        <view class="table-td">{{shopCart[item].name}}</view>
        <view class="table-td">{{shopCart[item].id}}</view>
        <view class="table-td">{{shopCart[item].originalPrice}}</view>
        <view class="table-td">{{shopCart[item].num}}</view>
        <view class="table-td">{{shopCart[item].originalPrice * shopCart[item].num}}</view>
      </view>
    </view>
    <view class="total-price">
      合计: {{totalValue / 100}}
    </view>
  </view>
</view>